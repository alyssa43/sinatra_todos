<section id="todos">
  <header>
    <h2><%= @list[:name] %></h2>
    <ul>
      <li><a class="edit" href="/lists/<%= @list[:id] %>/edit">Edit List</a></li>
    </ul>
  </header>
</section>

<% content_for :header_links do %>
  <a href="/lists">All Lists</a>
<% end %>

<ul id="todos">
<% @list[:todos].each do |todo| %>
  <li><%= todo %></li>

  <fieldset class="actions">
    <input type="submit" value="Edit"
  </fieldset>

<% end %>
</ul>

<form action="/lists/<%= @list[:list_id] %>" method="post">
  <dl>
    <dt>
      <label for="todo_item">Enter a new todo item:</label>
    </dt>
    <dd>
      <input name="todo_item" placeholder="Todo text" type="text" value="">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Add">
  </fieldset>
</form>